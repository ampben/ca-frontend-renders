<a href="{{cta.value}}" class="amp-ca-snippet js_ca_snippet">
    {{#if image}}
        <div class="amp-ca-image">
            {{dynamicTemplate renderTypes.image renderTypes image}}
        </div>
    {{/if}}

    {{#if title}}
        <div class="amp-ca-title">{{title}}</div>
    {{else}}
        {{#if mainBlogTitle}}
            <div class="amp-ca-title">{{mainBlogTitle}}</div>
        {{/if}}
    {{/if}}

    {{#if description}}
        <div class="amp-ca-description">{{description}}</div>
    {{/if}}

    {{#if cta}}
        {{#if cta.value}}
            <div class="amp-ca-link">
                <span class="amp-ca-snippet-more" href="{{cta.value}}">
                    {{#if cta.label}}
                        {{cta.label}}
                    {{else}}
                        Read more >>
                    {{/if}}
                </span>
            </div>
        {{/if}}
    {{/if}}
</a>
